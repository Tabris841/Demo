extends layout
block content
    nav.nav-bar.navbar-inverse
        div.container-fluid
            div.navbar-header
                span.navbar-brand
                    | Admin panel
            div
                ul.nav.navbar-nav
                    li.disabled
                        a(href="#")
                            | Home
                    li
                        a(href="/admin")
                            | Database
                    li.active
                        a(href="/signup")
                            | Add user
                ul.nav.navbar-nav.navbar-right
                    li
                        form(action='/logout' method='get')
                            button#customButton.btn.btn-default(type='sumbit')
                                span.glyphicon.glyphicon-log-in
                                | &nbsp;Logout
    div.container
        div.col-sm-6.col-md-4.col-md-offset-4
            h1
                span.fa.fa-sign-in
                | &nbsp;Register
            if (message.length > 0)
                div.alert.alert-danger
                    | #{message}
            form(action='/signup' method='post')
                div.form-group
                    label
                        | Email
                    input.form-control(type='email',name='email',required)
                div.form-group
                    label
                        | Password
                    input.form-control(type='password',name='password',required)

                button.btn.btn-warning.btn-lg(type='submit')
                    | Register

